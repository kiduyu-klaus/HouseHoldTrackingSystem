<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/content_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/head_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/update_cmble"
            android:layout_width="match_parent"
            android:layout_below="@+id/head_update"
            android:layout_height="wrap_content"
            android:hint="Please enter Consumable Quantity"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="82dp" />


        <Button
            android:id="@+id/btn_save_update"
            android:layout_width="match_parent"
            android:layout_below="@+id/update_cmble"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Update Consumable"

            />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/pb_ly"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/schedule_pb"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_pb"
            android:text="Loading...."
            android:textSize="27sp"
            android:textAlignment="center"/>
    </RelativeLayout>



</RelativeLayout>
