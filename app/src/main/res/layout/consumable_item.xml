<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="1dp"
    android:padding="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#EAF6EE"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp">

            <com.ekn.gruzer.gaugelibrary.HalfGauge
                android:id="@+id/halfGauge_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.rey.material.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/consumable_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham"
                    android:padding="3dp"
                    android:text="Maize Flour"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <com.rey.material.widget.LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/consumable_item_total_delivered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham"
                        android:padding="3dp"
                        android:text="Total Delivered: 25"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                    <TextView
                        android:id="@+id/consumable_item_date_delivered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham"
                        android:padding="3dp"
                        android:text="On: 2/02/2020"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                </com.rey.material.widget.LinearLayout>

                <TextView
                    android:id="@+id/consumable_item_remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/gotham"
                    android:padding="3dp"
                    android:text="Remaining: 10"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
            </com.rey.material.widget.LinearLayout>

        </RelativeLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/item_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/ic_more" />
    </LinearLayout>

</androidx.cardview.widget.CardView>